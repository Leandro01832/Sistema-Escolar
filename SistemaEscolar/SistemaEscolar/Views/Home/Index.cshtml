@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.js"></script>

@model List<Turma>;

<h1 class="display-4">Seja Bem Vindo</h1>

<div class="jumbotron row">

<div class="text-center col-md-4">
    <p><img class="img-fluid" width="380" src="~/home.jpg" /></p>
    <p>
        Aqui nós ensinamos todas as matérias básicas que você precisa:
        Português, Matemática, História, Geografia, História, Biologia, inglês
    </p>
    <p><img class="img-fluid" width="380" src="~/home2.jpg" /></p>
    <p>
        Aqui você aprende mais com as aulas de dança.
    </p>
    <p><img class="img-fluid" width="380" src="~/home3.jpg" /></p>
    <p>
        Aqui você aprende mais com as aulas de informatica.
    </p>
    <p><img class="img-fluid" width="380" src="~/home4.jpg" /></p>
    <p>
        Aqui você aprende mais com as aulas de Eletrônica.
    </p>
</div>

<div class="text-center col-md-8">

    <div id="my-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner" role="listbox">

            @{
                const int TAMANHO_PAGINA = 3;

                int paginas = (int)Math.Ceiling((double)Model.Count() / TAMANHO_PAGINA);
            }

            @for (int pagina = 0; pagina < paginas; pagina++)
            {

                <div class="item @(pagina == 0 ? "active" : "")">
                    <div class="row">

                        @{
                            var TurmasDaPagina = Model.Skip(pagina * TAMANHO_PAGINA).Take(TAMANHO_PAGINA);
                        }

                        @foreach (var turma in TurmasDaPagina)
                        {

                            <div class="col-md-3 col-sm-3 col-lg-3" style="background-color:aqua;">
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <img class="img-turma-carrossel img-fluid" src="~/images/turma/turma_@(turma.Id).jpg" width="250" />
                                    </div>
                                    <div class="panel-footer produto-footer">
                                        <div class="turma-letra">Letra da sala: @turma.LetraIdentificacao</div>
                                        <div class="turma-letra">matérias: @turma.Materias</div>

                                        <div><h4><strong>Numero da sala @turma.NumeroSala</strong></h4></div>
                                        <div class="text-center">
                                            <a asp-action="ParticiparTurma"
                                               asp-route-id="@turma.Id"
                                               class="btn btn-success">Matricular-se</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>

            }
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</div>

</div>



